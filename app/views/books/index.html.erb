<body>
<p id="notice"></p>
<h1>Books</h1>
<!--<table>-->
<% @books.each do |book| %>
<table>
  <thead class="title-box">
    <tr>
     <th class="book-title">Title</th>
     <th class="book-title-body">Body</th>
   </tr>
  </thead>
    <span>
      <%= book.title %>
    </span>

    <span>
      <%= book.body %>
    </span>
    <span>
      <%=link_to "Show", book_path(book.id) %>
    </span>
    <span>
      <%= link_to "Edit", edit_book_path(book.id) %>
    <span>
      <%=  link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are yuo sure？" %>
    </span>
<% end %>
</table>

<div class="New-book">
<h2>New book</h2>
<%= flash[:alert] %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <p>Title</p><!--検証では<label for="book_title">Title</label>-->
  <%= f.text_field :title %>
  <p>Body</p><!--検証では<label for="book_title">Body</label>-->
  <%= f.text_area :body %>
 <div>
  <%= f.submit 'Create Book' %><!--送信ボタンはBodyの下に来ている-->
 </div>
<% end %>
</div>
</body>