<h1>Books</h1>
<% @books.each do |book| %>

 <p>Title</p>
 <span><%= book.title %></span>
<% end %>

<!--本の名前、内容、Showに飛ぶ、Editに飛ぶ、Destroyボタンの記述-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p><!--検証では<label for="book_title">Title</label>-->
  <%= f.text_field :title %>

  <p>Body</p><!--検証では<label for="book_title">Body</label>-->
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %><!--送信ボタンはBodyの下に来ている-->
<% end %>